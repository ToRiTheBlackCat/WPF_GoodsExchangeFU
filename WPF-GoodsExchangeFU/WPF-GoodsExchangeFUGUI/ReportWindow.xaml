        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Window" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Report the Exchange" />
            <TextBox x:Name="ReportContentTextBox" Height="100" Width="300" />
            <Button Content="Submit" Click="SubmitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
