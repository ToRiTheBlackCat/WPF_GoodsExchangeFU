<Window x:Class="WPF_GoodsExchangeFUGUI.ReportWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Product" Height="700" Width="1200"
        Background="#FFD4F7D4">
    <Grid>
        <Label Content="Report Product" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Height="92" Width="251" FontFamily="Arial" FontSize="36"/>
        <TextBox Name="DetailTextBox" HorizontalAlignment="Center" Height="270" Margin="0,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="870" TextChanged="TextBox_TextChanged"/>
        <Label Content="Details" HorizontalAlignment="Left" Height="30" Margin="165,110,0,0" VerticalAlignment="Top" Width="169" FontFamily="Arial" FontSize="18"/>
        <Button Name="SubmitButton" Content="Submit" HorizontalAlignment="Center" Height="60" Margin="0,533,0,0" VerticalAlignment="Top" Width="180" FontSize="16" Click="SubmitButton_Click"/>
    </Grid>
</Window>
